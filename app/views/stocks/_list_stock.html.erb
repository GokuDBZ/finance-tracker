
<table class="table table-striped">
    <thead>
        <tr><th>Stock</th><th>Symbol</th><th>Price</th> <%if current_user.id == @user.id %><th>Action</th><%end%></tr>
    </thead>
    <tbody>
        <%@user_stocks.each do |stock|%>
            <tr>
                <td><%= stock.name%></td>
                <td><%= stock.ticker%></td>
                <td><%= stock.last_price%></td>
                <%if current_user.id  == @user.id%>
                <td><%= link_to 'Delete', user_stock_path(stock), method: :delete, class: "btn btn-xs btn-danger", data: {confirm: "Are you sure?"}%></td><%end%>
            </tr>
        <%end%>
    </tbody>
</table>